---
import { Container, Quotation } from '../components';
---

<Container
    element="header"
    globalClass="py-4 fixed top-0 left-1/2 -translate-x-1/2 z-[99]"
    containerClass="py-4 px-4 sm:px-6 bg-gray-50 border border-gray-200 rounded-xl flex justify-between items-center"
>
    <a href="/" class="flex gap-1 items-center select-none">
        <img src="/logo.png" alt="LS Services" class="size-10 object-contain" />
        <span
            class="text-2xl font-semibold text-neutral-800 leading-none hidden sm:block"
            >Services</span
        >
    </a>
    <a href="#menu" class="sm:hidden">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="stroke-gray-600 smooth-transition hover:stroke-gray-900"
        >
            <line x1="4" y1="8" x2="20" y2="8"></line>
            <line x1="4" y1="16" x2="20" y2="16"></line>
        </svg>
    </a>
    <nav
        id="menu"
        class="sm:gap-6 items-center flex sm:flex-row flex-col fixed sm:relative bg-gray-50 w-full sm:w-[unset] top-4 sm:top-0 py-6 sm:py-0 left-1/2 -translate-x-1/2 sm:left-0 sm:translate-x-0 border border-gray-200 sm:border-transparent rounded-xl target:opacity-100 opacity-0 sm:opacity-100 pointer-events-none target:pointer-events-auto sm:pointer-events-auto origin-[top_right] scale-0 target:scale-100 sm:scale-100 [transition:scale_0.5s_cubic-bezier(0,1,0.65,1),opacity_0.1s_ease]"
    >
        <a
            href="#"
            class="smooth-transition w-full flex items-center justify-end px-8 sm:hidden"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="stroke-gray-600"
            >
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </a>
        <a
            href="#"
            class="smooth-transition text-gray-500 hover:text-gray-900 px-6 sm:px-0 py-4 sm:py-0"
            >Productos</a
        >
        <a
            href="#"
            class="smooth-transition text-gray-500 hover:text-gray-900 px-6 sm:px-0 py-4 sm:py-0"
            >Portfolio</a
        >
        <a
            href="#"
            class="smooth-transition text-gray-500 hover:text-gray-900 px-6 sm:px-0 py-4 sm:py-0 mb-2 sm:mb-0"
            >Contacto</a
        >
        <Quotation
            class="w-[calc(100%-3rem)] py-4 sm:py-3.5 mx-auto sm:mx-[unset] sm:w-[unset]"
        />
    </nav>
</Container>
