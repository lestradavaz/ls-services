---
import { cn } from '../utils';

type Props = {
    href?: string;
    class?: string;
    type?: 'button' | 'submit' | 'reset';
    id?: string;
};

const { href, class: className, type = 'button', id } = Astro.props;
const Element = href ? 'a' : 'button';
---

<Element
    href={href}
    class={cn(
        `inline-flex items-center justify-center px-6 py-3 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors duration-300 cursor-pointer text-center`,
        className
    )}
    type={!href ? type : undefined}
    id={id}
>
    <slot />
</Element>
